<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ashan_pc.score.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/text1"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:text="HOME"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="43dp"
        android:layout_marginStart="43dp"

        />
    <TextView
        android:id="@+id/text2"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:text="AWAY"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="41dp"
        android:layout_marginEnd="41dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="316dp">
        <EditText
            android:id="@+id/edittext1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:hint="Score" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="50dp"
            android:layout_height="102dp"
            android:layout_marginTop="0dp"  >

            <Button
                android:layout_width="50dp"
                android:layout_height="33dp"
                android:text="UP"
                android:textAlignment="center"
                android:textSize = "10dp"
                android:id="@+id/btnHomeUp" />
            <Button
                android:layout_width="50dp"
                android:layout_height="33dp"
                android:text="DOWN"
                android:textAlignment="center"
                android:textSize = "8dp"
                android:id="@+id/btnHomeDown" />
            <Button
                android:layout_width="50dp"
                android:layout_height="33dp"
                android:text="SET"
                android:textAlignment="center"
                android:textSize = "10dp"
                android:id="@+id/btnHomeSet" />

        </LinearLayout>

        <EditText
            android:id="@+id/edittext2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:hint="Score" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="50dp"
            android:layout_height="102dp">

            <Button
                android:layout_width="50dp"
                android:layout_height="33dp"
                android:text="UP"
                android:textAlignment="center"
                android:textSize="10dp"
                android:id="@+id/btnAwayUp" />
            <Button
                android:layout_width="50dp"
                android:layout_height="33dp"
                android:text="DOWN"
                android:textAlignment="center"
                android:textSize="8dp"
                android:id="@+id/btnAwayDown" />
            <Button
                android:layout_width="50dp"
                android:layout_height="33dp"
                android:text="SET"
                android:textAlignment="center"
                android:textSize="10dp"
                android:id="@+id/btnAwaySet"/>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tex3"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="MAIN CLOCK"
        android:textSize="15dp"
        android:textAlignment="center"
        android:layout_marginTop="165dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:weightSum="1"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/tex3">
        <EditText
            android:id="@+id/editMainMintext2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:hint="MINS" />
        <EditText
            android:id="@+id/editMainSectext"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:hint="SECS" />

        <Button
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:text="SET"
            android:id="@+id/btnMainSet" />

        <Button
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:text="Start"
            android:id="@+id/btnMainStart" />
        <Button
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:text="Pause"
            android:id="@+id/btnMainPause" />

    </LinearLayout>
    <TextView
        android:id="@+id/text3"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:text="SHOT CLOCK"
        android:textSize="15dp"
        android:textAlignment="center"
        android:layout_marginTop="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textIsSelectable="false" />


<LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="270dp"
        android:gravity="center"
        android:id="@+id/linearLayout">
       <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="70dp">
            <EditText
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:hint="CLOCK"
                android:layout_marginLeft="0dp"
                android:id="@+id/editShotSec" />
            <Button
                android:layout_marginTop="10dp"
                android:layout_width="65dp"
                android:layout_height="40dp"
                android:text="Start"
                android:textSize="13dp"
                android:id="@+id/btnStartClock" />
            <Button
                android:layout_marginTop="10dp"
                android:layout_width="65dp"
                android:layout_height="40dp"
                android:text="Pause"
                android:textSize="13dp"
                android:id="@+id/btnPauseClock" />

            <Button
                android:layout_marginTop="10dp"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:text="SET"
                android:id="@+id/btnSetClock" />
            <Button
                android:layout_marginTop="10dp"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:text="24S"
                android:textSize="10dp"
                android:id="@+id/btn24Clock" />
            <Button
                android:layout_marginTop="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="14S"
                android:textSize="10dp"
                android:id="@+id/btn14Clock" />

        </LinearLayout>
    </LinearLayout>

<TextView
    android:layout_width="150dp"
    android:layout_height="50dp"
    android:text="FOULS"
    android:textSize="15dp"
    android:textAlignment="center"
    android:layout_marginTop="350dp"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:textIsSelectable="false" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="350dp">
        <EditText
            android:id="@+id/editText1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:hint="FOULS(H)"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="50dp"
            android:layout_height="102dp"
             >

            <Button
                android:id="@+id/foulsHomeUp"
                android:layout_width="50dp"
                android:layout_height="33dp"
                android:text="UP"
                android:textAlignment="center"
                android:textSize = "10dp"/>
            <Button
                android:id="@+id/foulsHomeDown"
                android:layout_width="50dp"
                android:layout_height="33dp"
                android:text="DOWN"
                android:textAlignment="center"
                android:textSize = "8dp"/>
            <Button
                android:id="@+id/foulsHomeSet"
                android:layout_width="50dp"
                android:layout_height="33dp"
                android:text="SET"
                android:textAlignment="center"
                android:textSize = "10dp"/>

        </LinearLayout>

        <EditText
            android:id="@+id/editText2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:hint="FOULS(A)"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="50dp"
            android:layout_height="102dp"
            >

            <Button
                android:id="@+id/foulsAwayUp"
                android:layout_width="50dp"
                android:layout_height="33dp"
                android:text="UP"
                android:textAlignment="center"
                android:textSize="10dp"/>
            <Button
                android:id="@+id/foulsAwayDown"
                android:layout_width="50dp"
                android:layout_height="33dp"
                android:text="DOWN"
                android:textAlignment="center"
                android:textSize="8dp"
                />
            <Button
                android:id="@+id/foulsAwaySet"
                android:layout_width="50dp"
                android:layout_height="33dp"
                android:text="SET"
                android:textAlignment="center"
                android:textSize="10dp"/>

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
